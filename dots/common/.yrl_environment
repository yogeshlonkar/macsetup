# vim: set ft=bash:
# environment variables and secrets

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export HISTCONTROL=ignoredups:erasedups
LYELLOW='\[\033[93m\]'
CYAN='\[\033[36m\]'
PS_CLEAR='\[\033[0m\]'
export CLICOLOR=1
export PS1="${LYELLOW}\u@\h:${CYAN}\W${PS_CLEAR}\$ "
export PATH=$PATH:/usr/local/sbin
# export PS1=\h:\W \u\$ ## default

[ -d "$(/usr/libexec/java_home 2>/dev/null)" ] && export JAVA_HOME=$(/usr/libexec/java_home) && export PATH="$JAVA_HOME/bin:$PATH"
[ -d '/usr/local/Cellar/maven/3.6.0/' ] && export M2_HOME=/usr/local/Cellar/maven/3.6.0/libexec && export PATH="$M2_HOME/bin:$PATH"
[ -d '/usr/local/opt/mongodb@3.6/' ] && export PATH="/usr/local/opt/mongodb@3.6/bin:$PATH"
[ -d '/usr/local/opt/node' ] && export PATH="/usr/local/opt/node/bin:$PATH"
[ -d '/usr/local/lib/python2.7/site-packages' ] &&  export POWERLINE_PACKAGE_DIR=/usr/local/lib/python2.7/site-packages

export DRONE_SERVER="https://drone.daznplatform.com"
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$ANDROID_HOME/tools/bin:$ANDROID_HOME/platform-tools:/Users/yogesh/go/bin
export GPG_TTY=$(tty)
